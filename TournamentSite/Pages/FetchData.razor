@page "/fetchdata"
@using Tournament.Model

@inject HttpClient Http

<h1>Tournaments</h1>

<p>This component demonstrates fetching data from the server.</p>
<TournamentForm></TournamentForm>
@if (_championships == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Prize pool</th>
            <th>Rounds</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var champ in _championships)
        {
            <tr>
                <td>@champ.TournamentName</td>
                <td>@champ.TournamentPrizePool</td>
                <td>@champ.RoundCount</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private Championship[] _championships;

    protected override async Task OnInitializedAsync()
    {
        var responseMessage = await Http.GetAsync("https://localhost:5011/Data/all");
        _championships = await responseMessage.Content.ReadFromJsonAsync<Championship[]>();
    }

}